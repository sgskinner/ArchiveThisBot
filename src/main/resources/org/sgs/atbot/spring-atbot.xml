<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:org/sgs/atbot/security.properties"/>

    <bean id="archiveThisBot" parent="archiveThisBot-parentBean"/>
    <bean id="archiveThisBot-parentBean" abstract="true" class="org.sgs.atbot.ArchiveThisBot">
        <property name="archiveIsService" ref="archiveService"/>
        <property name="redditService" ref="redditService"/>
        <property name="subredditList">
            <list>
                <value>ArchiveThisBotSandbox</value>
            </list>
        </property>
    </bean>

    <bean id="archiveService" parent="archiveService-parentBean"/>
    <bean id="archiveService-parentBean" class="org.sgs.atbot.service.impl.WaybackMachineArchiveServiceImpl" abstract="true"/>

    <bean id="redditService" parent="redditService-parentBean"/>
    <bean id="redditService-parentBean" class="org.sgs.atbot.service.impl.RedditServiceImpl" abstract="true">
        <property name="redditClient" ref="redditClient"/>
        <property name="authService" ref="authService"/>
    </bean>


    <bean id="credentials" class="net.dean.jraw.http.oauth.Credentials">
        <constructor-arg name="authenticationMethod" value="SCRIPT"/>
        <constructor-arg name="username" value="${reddit.username}"/>
        <constructor-arg name="password" value="${reddit.password}"/>
        <constructor-arg name="clientId" value="${reddit.clientId}"/>
        <constructor-arg name="clientSecret" value="${reddit.clientSecret}"/>
        <constructor-arg name="redirectUrl" value="${reddit.redirectUrl}"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="${db.url}"/>
        <property name="username" value="${db.username}"/>
        <property name="password" value="${db.password}"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="show_sql">false</prop>
            </props>
        </property>
        <property name="annotatedClasses">
            <list>
                <value>org.sgs.atbot.model.ArchiveResultBo</value>
                <value>org.sgs.atbot.model.AtbotUrl</value>
            </list>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="hibernateTemplate" class="org.springframework.orm.hibernate5.HibernateTemplate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <!-- Auto scan the components -->
    <context:component-scan base-package="org.sgs.atbot"/>

</beans>
